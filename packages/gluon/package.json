  "main": "index.js",
  "module": "index.js",
  "type": "module",
  "typings": "index.d.ts",
  "exports": [
    "./index.js",
    "./apollo-element.js",
    "./apollo-mutation.js",
    "./apollo-query.js",
    "./apollo-subscription.js"
  ],
  "scripts": {
