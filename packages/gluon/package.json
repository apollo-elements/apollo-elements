{
  "name": "@apollo-elements/gluon",
  "version": "2.0.2",
  "description": "👩‍🚀🌛 Gluon Elements for Apollo GraphQL 🚀👨‍🚀",
  "main": "index.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "prepublishOnly": "tsc -b .",
    "build": "tsc",
    "lint": "run-s lint:*",
    "lint:types": "tsc --noEmit",
    "start": "tsc -w --noEmit",
    "clean": "run-s clean:*",
    "clean:js": "rm -f ./*.js",
    "preclean:dts": "mv gluon.d.ts bak",
    "postclean:dts": "mv bak gluon.d.ts",
    "clean:dts": "rm -f ./*.d.ts;",
    "clean:map": "rm -f ./*.js.map",
    "docs": "run-s docs:*",
    "docs:polymer": "polymer analyze > docs/analysis.json",
    "docs:wca": "wca analyze './*.ts' --format json --outFile custom-elements.json",
    "test": "echo \"Please run tests from the repository root\" && exit 1"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/apollo-elements/apollo-elements.git"
  },
  "keywords": [
    "Apollo",
    "GraphQL",
    "Web Components",
    "Custom Elements",
    "Gluon",
    "lit-html"
  ],
  "author": "Benny Powers <web@bennypowers.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/apollo-elements/apollo-elements/issues"
  },
  "homepage": "https://github.com/apollo-elements/apollo-elements#readme",
  "dependencies": {
    "@apollo-elements/mixins": "^2.0.1",
    "@gluon/gluon": ">= 2",
    "tslib": "^2.0.1"
  }
}
