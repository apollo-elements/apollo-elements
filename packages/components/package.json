{
  "name": "@apollo-elements/components",
  "version": "2.0.0-next.3",
  "description": "👩‍🚀🌛 Web component helpers for Apollo GraphQL 🚀👨‍🚀",
  "type": "module",
  "main": "index.js",
  "module": "index.js",
  "exports": {
    ".": {
      "esbuild": "./index.ts",
      "default": "./index.js"
    },
    "./*": {
      "esbuild": "./*.ts",
      "default": "./*.js"
    },
    "./*.js": {
      "esbuild": "./*.ts",
      "default": "./*.js"
    }
  },
  "files": [
    "custom-elements.json",
    "*.d.ts",
    "*.js",
    "*.js.map",
    "**/*.d.ts",
    "**/*.js",
    "**/*.js.map"
  ],
  "scripts": {
    "prepublishOnly": "yarn run-s prepublishOnly:*",
    "prepublishOnly:analyze": "npm run analyze",
    "prepublishOnly:build": "tsc -b .",
    "build": "tsc",
    "lint": "run-s lint:*",
    "lint:types": "tsc --noEmit",
    "start": "tsc -w --noEmit",
    "analyze": "run-p analyze:*",
    "analyze:json": "custom-elements-manifest analyze --litelement",
    "analyze:md": "node ../../scripts/readmes.js",
    "test": "wtr --coverage --root-dir ../.."
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.com"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/apollo-elements/apollo-elements.git",
    "directory": "packages/components"
  },
  "keywords": [
    "Apollo",
    "GraphQL",
    "Web Components",
    "Custom Elements"
  ],
  "author": "Benny Powers <web@bennypowers.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/apollo-elements/apollo-elements/issues"
  },
  "homepage": "https://apolloelements.dev/modules/_apollo_elements_components.html",
  "dependencies": {
    "@apollo-elements/core": "^0.0.1-next.1",
    "@apollo-elements/interfaces": "^1.5.0",
    "@apollo-elements/mixins": "^4.0.0-next.1",
    "@apollo/client": "^3.3.20",
    "stampino": "^0.6.2",
    "tslib": "^2.3.0"
  },
  "customElements": "custom-elements.json"
}
