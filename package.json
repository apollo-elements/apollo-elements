{
  "name": "root",
  "private": true,
  "logo": {
    "file": "./logo.png"
  },
  "scripts": {
    "docs": "sh scripts/docs.sh",
    "lint": "eslint packages",
    "clean": "lerna run clean",
    "postinstall": "patch-package",
    "build": "lerna run build",
    "watch": "tsc -w",
    "deploy": "lerna publish --message 'chore: release new versions'",
    "deploy:ci": "lerna publish --yes --message 'chore: release new versions'",
    "test": "karma start --coverage",
    "test:watch": "karma start --coverage --auto-watch=true --single-run=false",
    "prebuild": "yarn clean",
    "prestart": "yarn build",
    "start": "lerna run start --stream --parallel"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/config-lerna-scopes": "^8.3.4",
    "@gluon/gluon": "^2.5.3",
    "@kocal/rollup-plugin-graphql": "^1.0.0",
    "@material/mwc-button": "^0.15.0",
    "@open-wc/lit-helpers": "^0.3.10",
    "@open-wc/testing": "^2.5.17",
    "@open-wc/testing-helpers": "^1.7.1",
    "@open-wc/testing-karma": "^3.4.0",
    "@polymer/iron-component-page": "^4.0.1",
    "@pwrs/eslint-config": "^0.0.7",
    "@rollup/plugin-commonjs": "^12.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@types/chai": "^4.2.11",
    "@types/graphql": "^14.5.0",
    "@typescript-eslint/parser": "^3.0.1",
    "ajv": "^6.12.0",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "apollo-link-schema": "^1.2.5",
    "apollo-link-ws": "^1.0.20",
    "apollo-server": "^2.12.0",
    "apollo-utilities": "^1.3.3",
    "chai": "^4.2.0",
    "codecov": "^3.6.5",
    "commitizen": "^4.0.4",
    "crocks": "^0.12.4",
    "cz-lerna-changelog": "^2.0.2",
    "es-dev-server-import-graphql": "^2.1.0",
    "es-dev-server-rollup": "^0.0.4",
    "eslint": "^7.1.0",
    "esm": "^3.2.25",
    "graphql": "^15.0.0",
    "graphql-tag": "^2.10.3",
    "graphql-tools": "^6.0.3",
    "husky": "^4.2.5",
    "hybrids": "^4.2.0",
    "karma": "^5.0.1",
    "karma-mocha": "^2.0.1",
    "lerna": "^3.22.0",
    "lint-staged": "^10.1.3",
    "lit-element": "^2.3.1",
    "lit-html": "^1.2.1",
    "mocha": "^7.1.1",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.2",
    "rollup": "^2.10.9",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^6.1.0",
    "ts-sinon": "^1.2.0",
    "typescript": "^3.9.3",
    "web-component-analyzer": "^1.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.0.0"
  }
}
