    "typedoc": "^0.20.10",
    "typescript": "^4.1.3",
    "unist-util-map": "^2.0.1",
    "web-component-analyzer": "^1.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.0.3"
  },
  "resolutions": {
    "@11ty/eleventy": "^0.11",
    "@types/chai": "^4.2.14",
    "@web/dev-server": "^0.1.3",
    "@web/dev-server-core": "^0.3.2",
    "@web/dev-server-rollup": "^0.3.1",
    "@web/test-runner": "^0.11.7",
    "@web/test-runner-core": "^0.9.3",
    "eslint": "^7.17.0"
  }
}
