    "sanitize-html": "^2.6.1",
    "tap-spec": "^5.0.0",
    "tape-es": "^1.2.17",
    "ts-sinon": "^2.0.2",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "tslib": "^2.3.1"
  }
}
