{
  "name": "root",
  "private": true,
  "logo": {
    "file": "./logo.png"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:codegen": "graphql-codegen",
    "build:packages": "lerna run build",
    "clean": "run-s clean:*",
    "clean:packages": "rimraf 'packages/!(create)/**/*.{js,js.map,d.ts}'",
    "clean:create-app": "rimraf 'packages/create/*.{js,js.map,d.ts}'",
    "clean:node-modules": "rimraf 'packages/**/node_modules'",
    "deploy": "run-s clean deploy:prepublish clean deploy:lerna",
    "deploy:prepublish": "yarn workspaces run prepublishOnly",
    "deploy:lerna": "lerna publish --message 'chore: release new versions'",
    "deploy:clean": "yarn clean",
    "prerelease": "run-s prerelease:*",
    "prerelease:lint": "yarn lint",
    "prerelease:build": "lerna run prepublishOnly",
    "prerelease:clean": "yarn clean",
    "prerelease:release": "lerna publish prerelease --dist-tag next",
    "docs": "run-p docs:*",
    "docs:analyze": "lerna run analyze",
    "docs:typedoc": "run-s docs:typedoc:*",
    "docs:typedoc:almost": "rimraf docs",
    "docs:typedoc:copy": "cp declaration.d.ts packages/gluon/",
    "docs:typedoc:create": "typedoc",
    "docs:typedoc:fix": "ts-node -O '{\"module\": \"commonjs\", \"resolveJsonModule\": true}' scripts/fix-typedoc.ts",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint .",
    "lint:types": "lerna run lint:types",
    "postinstall": "patch-package",
    "start": "run-p start:*",
    "start:clean": "yarn clean",
    "start:codegen": "graphql-codegen --watch",
    "start:tsc": "lerna run start --stream --parallel",
    "test": "wtr --coverage",
    "test:watch": "wtr --watch"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "devDependencies": {
    "@apollo-elements/rollup-plugin-graphql": "^1.0.3",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@gluon/gluon": "^2.5.3",
    "@graphql-codegen/cli": "^1.17.9",
    "@graphql-codegen/typescript": "^1.17.10",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@material/mwc-button": "^0.19.1",
    "@open-wc/lit-helpers": "^0.3.11",
    "@open-wc/testing": "^2.5.26",
    "@open-wc/testing-helpers": "^1.8.9",
    "@polymer/iron-component-page": "^4.0.1",
    "@polymer/polymer": "^3.4.1",
    "@pwrs/eslint-config": "^0.0.19",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/chai": "^4.2.14",
    "@types/graphql": "^14.5.0",
    "@types/jsdom": "^16.2.4",
    "@types/mkdirp": "^1.0.1",
    "@types/ncp": "^2.0.4",
    "@types/prompts": "^2.0.9",
    "@typescript-eslint/parser": "^4.4.1",
    "@web/dev-server": "^0.0.15",
    "@web/dev-server-esbuild": "^0.2.6",
    "@web/dev-server-import-maps": "^0.0.3",
    "@web/dev-server-rollup": "^0.2.9",
    "@web/test-runner": "^0.9.4",
    "chai": "^4.2.0",
    "commitizen": "^4.2.1",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.11.0",
    "execa": "^4.0.3",
    "globby": "^11.0.1",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^6.2.3",
    "husky": "^4.3.0",
    "hybrids": "^4.3.0",
    "jsdom": "^16.4.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.4.2",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.32.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-node": "^9.0.0",
    "ts-sinon": "^2.0.1",
    "typedoc": "^0.19.2",
    "typedoc-plugin-example-tag": "^1.0.2",
    "typedoc-plugin-extras": "^1.1.6",
    "typedoc-plugin-graphql": "^1.0.3",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typedoc-plugin-no-inherit": "^1.2.0",
    "typedoc-plugin-pages": "^1.0.1",
    "typescript": "^4.0.3",
    "web-component-analyzer": "^1.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.0.1"
  },
  "resolutions": {
    "@types/chai": "^4.2.14"
  }
}
