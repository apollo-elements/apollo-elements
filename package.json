    "custom-elements-manifest": "github:webcomponents/custom-elements-manifest",
    "cz-lerna-changelog": "^2.0.3",
    "dedent-tag": "^1.0.1",
    "eleventy-plugin-add-web-component-definitions": "^2.0.1",
    "eleventy-plugin-footnotes": "^0.9.0",
    "eleventy-plugin-helmet": "^0.2.1",
    "esbuild": "^0.8.29",
    "eslint": "^7.17.0",
