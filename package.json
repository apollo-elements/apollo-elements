{
  "name": "root",
  "private": true,
  "logo": {
    "file": "./logo.png"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:codegen": "graphql-codegen",
    "build:packages": "yarn workspaces run build",
    "build:analyze": "yarn workspaces run analyze",
    "clean": "run-s clean:*",
    "clean:packages": "rimraf 'packages/!(create)/**/!(rollup.config).{js,js.map,d.ts,tgz}'",
    "clean:create-app": "rimraf 'packages/create/*.{js,js.map,d.ts,tgz}'",
    "clean:node-modules": "rimraf 'packages/**/node_modules'",
    "deploy": "run-s deploy:*",
    "deploy:preclean": "yarn clean",
    "deploy:tags": "git pull --tags",
    "deploy:lint": "yarn lint",
    "deploy:build": "yarn workspaces run prepublishOnly",
    "deploy:clean": "yarn clean",
    "deploy:lerna": "lerna publish --conventional-graduate",
    "deploy:postclean": "yarn clean",
    "prerelease": "run-s prerelease:*",
    "prerelease:preclean": "yarn clean",
    "prerelease:tags": "git pull --tags",
    "prerelease:lint": "yarn lint",
    "prerelease:build": "yarn workspaces run prepublishOnly",
    "prerelease:clean": "yarn clean",
    "prerelease:release": "lerna publish --conventional-prerelease --pre-dist-tag next",
    "prerelease:postclean": "yarn clean",
    "docs": "run-s build:codegen docs:*",
    "docs:analyze": "node --input-type module -e \"await import('./packages/docs/rocket-plugins/copy-manifests.mjs').then(m => m.generateManifests())\"",
    "docs:rollup": "rollup -c rollup.config.docs.js",
    "docs:rocket": "ELEVENTY_ENV=production rocket build",
    "docs:copy": "cpx 'docs/_assets/**/*.{svg,png,jpg}' _site/_merged_assets/",
    "lint": "run-s lint:*",
    "lint:clean": "rimraf packages/gluon/declaration.d.ts",
    "lint:eslint": "eslint .",
    "lint:types": "yarn workspaces run lint:types",
    "postinstall": "patch-package",
    "start": "run-p start:*",
    "start:clean": "yarn clean",
    "start:codegen": "graphql-codegen --watch",
    "start:tsc": "yarn workspaces run start --stream --parallel",
    "start:docs": "rocket start",
    "test": "wtr --coverage",
    "watch:test": "wtr --watch",
    "watch:eslint": "esw",
    "watch:codegen": "graphql-codegen --watch",
    "watch:types": "yarn workspaces run tsc --watch --noEmit"
  },
  "lint-staged": {
    "*.ts": ["eslint --fix", "git add"]
  },
  "workspaces": ["packages/*", "docs"],
  "devDependencies": {
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.4",
    "@apollo-elements/rollup-plugin-graphql": "^1.0.3",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@gluon/gluon": "^2.5.3",
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/typed-document-node": "^1.18.2",
    "@graphql-codegen/typescript": "^1.20.0",
    "@graphql-codegen/typescript-operations": "^1.17.13",
    "@jlengstorf/get-share-image": "^0.8.0",
    "@material/mwc-button": "^0.20.0",
    "@open-wc/lit-helpers": "^0.3.11",
    "@open-wc/testing": "^2.5.32",
    "@open-wc/testing-helpers": "^1.8.12",
    "@polymer/iron-component-page": "^4.0.1",
    "@polymer/polymer": "^3.4.1",
