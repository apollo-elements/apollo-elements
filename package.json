    "rocket-preset-playground-elements": "^0.2.2",
    "rocket-preset-slide-decks": "0.1.3",
    "rocket-preset-webcomponents-dev": "0.1.6",
    "rollup": "^2.60.1",
    "rollup-plugin-esbuild": "^4.7.2",
    "rollup-plugin-lit-css": "^3.2.1",
    "rollup-plugin-postcss": "^4.0.2",
    "sanitize-html": "^2.6.0",
    "tap-spec": "^5.0.0",
    "tape-es": "^1.2.17",
    "ts-sinon": "^2.0.2",
    "typescript": "4.3.5"
  },
  "dependencies": {
    "tslib": "^2.3.1"
  }
}
