{
  "name": "root",
  "private": true,
  "logo": {
    "file": "./logo.png"
  },
  "scripts": {
    "build": "run-s build:*",
    "build:codegen": "graphql-codegen",
    "build:packages": "lerna run build",
    "clean": "rimraf 'packages/**/*.{js,js.map,d.ts}'",
    "deploy": "lerna publish --message 'chore: release new versions'",
    "deploy:canary": "lerna publish --canary --message 'chore: release canary versions'",
    "docs": "run-p docs:*",
    "docs:analyze": "lerna run analyze",
    "docs:typedoc": "run-s docs:typedoc:*",
    "docs:typedoc:almost": "rimraf docs",
    "docs:typedoc:copy": "cp declaration.d.ts packages/gluon/",
    "docs:typedoc:create": "typedoc",
    "docs:typedoc:fix": "ts-node-script -O '{\"module\": \"commonjs\", \"resolveJsonModule\": true}' scripts/fix-typedoc.ts",
    "launch": "wds --open examples/spacex --watch",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint .",
    "lint:types": "lerna run lint:types",
    "postinstall": "patch-package",
    "prestart": "yarn clean",
    "start": "run-p start:*",
    "start:codegen": "graphql-codegen --watch",
    "start:tsc": "lerna run start --stream --parallel",
    "test": "wtr --coverage",
    "test:watch": "wtr --watch"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.2",
    "@commitlint/config-lerna-scopes": "^9.1.2",
    "@gluon/gluon": "^2.5.3",
    "@graphql-codegen/cli": "^1.17.8",
    "@graphql-codegen/typescript": "^1.17.9",
    "@graphql-codegen/typescript-operations": "^1.17.8",
    "@kocal/rollup-plugin-graphql": "^1.0.0",
    "@material/mwc-button": "^0.18.0",
    "@open-wc/lit-helpers": "^0.3.11",
    "@open-wc/testing": "^2.5.25",
    "@open-wc/testing-helpers": "^1.8.9",
    "@polymer/iron-component-page": "^4.0.1",
    "@pwrs/eslint-config": "0.0.9",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/chai": "^4.2.12",
    "@types/graphql": "^14.5.0",
    "@types/jsdom": "^16.2.4",
    "@typescript-eslint/parser": "^4.0.1",
    "@web/dev-server": "^0.0.5",
    "@web/dev-server-esbuild": "^0.2.4",
    "@web/dev-server-import-maps": "^0.0.3",
    "@web/dev-server-rollup": "^0.2.5",
    "@web/test-runner": "^0.7.16",
    "ajv": "^6.12.4",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.14",
    "apollo-link-http": "^1.5.17",
    "apollo-link-schema": "^1.2.5",
    "apollo-link-ws": "^1.0.20",
    "apollo-server": "^2.17.0",
    "apollo-utilities": "^1.3.3",
    "chai": "^4.2.0",
    "codecov": "^3.7.2",
    "commitizen": "^4.2.1",
    "cz-lerna-changelog": "^2.0.3",
    "es-dev-server-import-css": "^2.1.0",
    "es-dev-server-import-graphql": "^2.1.0",
    "es-dev-server-rollup": "^0.0.8",
    "eslint": "^7.8.1",
    "esm": "^3.2.25",
    "graphql": "^15.3.0",
    "graphql-tag": "^2.11.0",
    "graphql-tools": "^6.2.0",
    "husky": "^4.2.5",
    "hybrids": "^4.3.0",
    "jsdom": "^16.4.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "mocha": "^8.1.3",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "patch-package": "^6.2.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.9",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-terser": "^7.0.1",
    "ts-node": "^9.0.0",
    "ts-sinon": "^2.0.1",
    "typedoc": "^0.19.0",
    "typedoc-plugin-extras": "^1.1.6",
    "typedoc-plugin-lerna-packages": "^0.3.1",
    "typedoc-plugin-no-inherit": "^1.1.10",
    "typedoc-plugin-pages": "^1.0.1",
    "typescript": "^4.0.2",
    "web-component-analyzer": "^1.1.6"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "dependencies": {
    "tslib": "^2.0.1"
  }
}
