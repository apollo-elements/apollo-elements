    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0",
    "markdown-it": "^12.0.4",
    "markdown-it-prism": "^2.1.4",
    "mermaid": "^8.8.4",
    "mermaid.cli": "^0.5.1",
