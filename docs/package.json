{
  "name": "apollo-elements-docs",
  "private": true,
  "version": "1.0.0",
  "description": "Apollo Elements Documentation Site",
  "main": "themes/apollo-elements/assets/js/main.js",
  "scripts": {
    "build": "hugo",
    "build:dev": "hugo -D --buildDrafts",
    "serve": "hugo server -D --bind 0.0.0.0 --baseURL http://localhost",
    "serve:fast": "hugo server -D --disableFastRender=false --bind 0.0.0.0",
    "clean": "rm -rf public resources",
    "lint:css": "stylelint 'themes/apollo-elements/assets/css/**/*.css'",
    "lint:js": "eslint 'themes/apollo-elements/assets/js/**/*.js'",
    "format": "prettier --write 'themes/apollo-elements/assets/**/*.{css,js}'",
    "test:build": "hugo --minify --destination public-test",
    "metrics": "cd $(npm prefix) && hugo --templateMetrics --templateMetricsHints"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^10.4.0",
    "prettier": "^3.6.2"
  },
  "browserslist": [
    "defaults",
    "not IE 11",
    "not dead"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/apollo-elements/apollo-elements.git",
    "directory": "docs"
  },
  "keywords": [
    "apollo",
    "graphql",
    "web-components",
    "lit",
    "documentation",
    "hugo"
  ],
  "author": "Benny Powers <web@bennypowers.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/apollo-elements/apollo-elements/issues"
  },
  "homepage": "https://apolloelements.dev"
}
