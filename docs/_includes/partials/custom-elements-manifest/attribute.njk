{% from "./macros.njk" import linkHeading, codeBlock %}
{% from "./macros.njk" import inheritance with context %}

<type-doc kind="attribute"
    data-attribute="{{ attribute.name }}"
    {{ ('data-inherited-from='+attribute.inheritedFrom.name) if attribute.inheritedFrom}}>
  <span slot="name">
    {{ linkHeading(attribute.name) }}
  </span>

  {{ inheritance(attribute) }}

  <span slot="type">{{ codeBlock(attribute.type | getTypeString) }}</span>

  {% if attribute.summary %}
    {% markdown %}{{ attribute.summary | safe }}{% endmarkdown %}
  {% endif %}

  {% if attribute.description %}
    {% markdown %}{{ attribute.description | safe }}{% endmarkdown %}
  {% endif %}

</type-doc>
