{% extends 'layout-sidebar.njk' %}

{% from "partials/custom-elements-manifest/get-manifest.njk" import manifest with context %}
{% from "partials/custom-elements-manifest/macros.njk" import linkHeading %}

{% macro renderModule(mod, blocks, moduleData, setExportsHeading=false) %}

  {% if not moduleData %}
    {% set moduleData = manifest | getModule(mod) %}
  {% endif %}

  {% set additionalHeadings = moduleData | getHeadings %}

  {% if setExportsHeading %}
    {% set exportsHeading = 3 %}
  {% endif %}

  {% for blockName, blockPath in blocks %}
    {% include blockPath %}
  {% endfor %}
{% endmacro %}

{% set blocks = _joiningBlocks._layoutApiIndex.content if layout === 'layout-api-index' else _joiningBlocks._layoutApi.content %}

{% block content %}
  <main class="markdown-body">
    {%- if modules -%}
      {% for blockName, blockPath in blocks %}
        {% if blockName === '10-content.njk' %}
          {% include blockPath %}
        {% endif %}
      {% endfor %}
      {%- for module in modules -%}
        {{- linkHeading((manifest | getModule(module)).path, level=2) -}}
        {{- renderModule(module, blocks | nonContent, setExportsHeading=true) -}}
      {%- endfor -%}
    {%- elif module -%}
      {{- renderModule(module, blocks) -}}
    {%- else -%}
      {% set module = 'index.js' %}
      {{- renderModule(module, blocks=blocks) -}}
    {%- endif -%}
  </main>
{% endblock content %}

{% block bottom %}
  <script type="module" async>
    if (location.hash) {
      const anchor = document.querySelector(location.hash)
      const doc = anchor && anchor.closest('type-doc');
      if (doc) {
        doc.expanded = true;
        doc.scrollIntoView();
      }
    }
  </script>
{% endblock bottom %}
