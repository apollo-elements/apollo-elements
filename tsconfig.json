{
  "extends": "./tsconfig.settings.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
       "@apollo-elements/*": ["packages/*/src"]
    }
  },
  "typedocOptions": {
    "name": "Apollo Elements",
    "favicon": "./logo.svg",
    "theme": "pages-plugin",
    "mode": "library",
    "out": "docs",
    "readme": "README.md",
    "excludeExternals": true,
    "inputFiles": [ "packages" ],
    "pages": {
      "source": ".",
      "groups": [{
        "title": "Guides",
        "pages": [{
            "title": "🏎 Buildless Local Development",
            "source": "./pages/buildless-development.md"
          }, {
            "title": "🗞 Building for Production",
            "source": "./pages/building-for-production.md"
          }, {
            "title": "🤖 Code Generated TypeScript Types",
            "source": "./pages/codegen.md"
          }]
      }, {
        "title": "Using Apollo",
        "pages": [{
            "title": "🔎 Queries",
            "source": "./pages/queries.md"
          }, {
            "title": "👾 Mutations",
            "source": "./pages/mutations.md"
          }, {
            "title": "📖 Subscriptions",
            "source": "./pages/subscriptions.md"
        }]
      }, {
        "title": "Cool Tricks",
        "pages": [{
            "title": "📜 Inline Query Scripts",
            "source": "./pages/inline-query-scripts.md"
          }, {
            "title": "⌚️ Asynchronous Client",
            "source": "./pages/async-client.md"
        }]
      }]
    },
    "exclude": [
      "packages/test-helpers",
      "**/*+(index|.spec|.test|.e2e).ts",
      "**/*+(.graphql|.css)",
      "**/*.graphql",
      "**/*.css",
      "*/test.schema.graphql"
    ]
  }
}
