{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node",
    "lib": [
      "es2019",
      "dom"
    ],
    "target": "es2019",
    "typeRoots": [
      "./typings"
    ],
    "outDir": "./typings"
  },
  "exclude": [
    "**/docs/*",
    "**/*.test.js",
    "**/*.config.js",
    "**/*.conf.js",
    "test/*",
    "coverage/*",
    "packages/**/coverage/*",
    "packages/eslint-config/*"
  ]
}
